@model IEnumerable<VideoGameHash.Models.Games>

@{
    int i = 0;
    string colorClass;
}

@if (Model == null || Model.Count() <= 0)
{
    <p>No entries found.</p>
}
else
{
    foreach (var item in Model)
    {
        if (i % 2 == 0)
        {
            colorClass = "white_back";
        }
        else
        {
            colorClass = "grey_back";
        }
        <div class="@colorClass clipped-text">
            @*@Html.ActionLink(Model.ElementAt(i).GameTitle, "GameDetails", new { Id = Model.ElementAt(i).Id })*@
            <a class="game-details" href="#!" data-url="@Url.Action("GetGameDetails", new { Id = Model.ElementAt(i).Id })">@Model.ElementAt(i).GameTitle</a>
        </div>
        i++;
    }
}